// prettier-ignore
{
  "extends": "./config/react-native-tsconfig.json",     /* Recommended React Native TSConfig base */
  "compilerOptions": {
      /* Visit https://aka.ms/tsconfig.json to read more about this file */

      /* Completeness */
      "skipLibCheck": true /* Skip type checking all .d.ts files. */,

      "baseUrl": "./src",
      "paths": {
          "@/*": ["./*"],
          "@api/*": ["query/*"],
          "@assets/*": ["assets/*"],
          "@components/*": ["components/*"],
          "@layouts/*": ["layouts/*"],
          "@utils/*": ["utils/*"]
      },

      "types": ["jest", "cypress", "@testing-library/cypress"]
  }
}
